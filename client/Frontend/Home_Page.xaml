<Page x:Class="Frontend.Home_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Frontend"
      mc:Ignorable="d" 
	  d:DesignHeight="600" d:DesignWidth="900"
      Title="Home_Page" Background="#FFF1F3CE">

	<Grid Margin="10,0">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="25*"/>
			<ColumnDefinition Width="34*"/>
			<ColumnDefinition Width="25*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Image Grid.Column="1" Source="MainIcon.png" Margin="30,0" MaxWidth="350" MaxHeight="350" MouseLeftButtonDown="MouseEnter"/>
		<Image Source="print.png" Margin="25,0,0,0" MaxWidth="280" MaxHeight="280" MouseLeftButtonDown="PrintImgClicked" />
		<Image Source="settings.png" Margin="0,0,25,0" Grid.Column="2" MaxWidth="280" MaxHeight="280" />

	</Grid>
</Page>
