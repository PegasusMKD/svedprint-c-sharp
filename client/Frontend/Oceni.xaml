<Page x:Class="Frontend.Oceni"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Frontend"
      mc:Ignorable="d" Background="#FFF1F3CE"
      d:DesignHeight="600" d:DesignWidth="900"
      Title="Oceni">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="31*"/>
			<RowDefinition Height="50*"/>
			<RowDefinition Height="219*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="83*"/>
			<ColumnDefinition Width="217*"/>
		</Grid.ColumnDefinitions>
		<ListView Name ="Menu" Height="Auto" VerticalAlignment="Stretch" Grid.RowSpan="3" Background="#FFF1F3CE" Margin="0,15,0,0" BorderThickness="1,1,1,2" BorderBrush="#FFF1F3CE" ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.HorizontalScrollBarVisibility="Disabled">

		</ListView>
		<StackPanel Grid.Column="1" Background="#FFED6A3D">
			<Label Name="Ucenik_Name" Content="Име Презиме" FontFamily="Arial Black" FontSize="48" HorizontalAlignment="Center" Foreground="White"/>
		</StackPanel>
		<StackPanel Background="#FF4B86C6" Grid.Column="1" Grid.Row="1"/>
		<ScrollViewer Grid.Column="1" Grid.Row="2">
			<Grid Name="OcenkiGrid" Grid.Column="1" Background="#FF3E4959" Grid.Row="2" ShowGridLines="True" Height="0">
				<Grid.RowDefinitions>
					<RowDefinition Height="46*"/>
					<RowDefinition Height="173*"/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="157*"/>
					<ColumnDefinition Width="157*"/>
					<ColumnDefinition Width="158*"/>
					<ColumnDefinition Width="157*"/>
				</Grid.ColumnDefinitions>
			</Grid>
		</ScrollViewer>

	</Grid>
</Page>
