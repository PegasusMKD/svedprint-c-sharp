<Page x:Class="Frontend.EditUcenici_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Frontend"
      mc:Ignorable="d" d:DesignHeight="538"
      d:DesignWidth="651" Background="#FF3E4959"
      Title="EditUcenici_Page" >

    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="61*"/>
            <RowDefinition Height="477*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Image Source="check_icon.png" HorizontalAlignment="Left" Margin="20,5,0,5" ></Image>
        
        <Grid Margin="0,2,0,2" VerticalAlignment="Top" HorizontalAlignment="Center" >
            <Image HorizontalAlignment="Center" VerticalAlignment="Center" Source="prosek_krug.png" Margin="0" Width="65" Grid.Row="1" Grid.Column="1"/>
            <TextBox Name ="BrojDnLabel" Grid.Column="1" Margin="0" Grid.Row="1" TextWrapping="Wrap" Text="1" Background="{x:Null}" BorderBrush="{x:Null}" SelectionBrush="White" Foreground="White" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Image Name="LeftTriangle" Margin="0,0,150,3" VerticalAlignment="Bottom" Source="triangle left.png" Height="50" MouseLeftButtonDown="LeftTriangleClicked"/>
            <Image Name="RightTriangle" Margin="150,0,0,3" VerticalAlignment="Bottom" Source="triangle right.png" Height="50" MouseLeftButtonDown="RightTriangleClicked"/>
        </Grid>
        <DockPanel HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,5,20,5">
            <Image Source="plus.png" />
            <Image Source="trash_icon.png" Margin="10,0,0,0"></Image>
        </DockPanel>


        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1" HorizontalContentAlignment="Stretch" VerticalAlignment="Top" VerticalContentAlignment="Stretch" >
            <Grid Name = "MainGrid" Grid.Row="1"  Height="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
