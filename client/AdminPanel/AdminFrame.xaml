<Page x:Class="AdminPanel.AdminFrame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AdminPanel"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="600"
      Background="#3e5878"
      Title="AdminFrame">


    <StackPanel>
        <ScrollViewer VerticalScrollBarVisibility="Auto">

            <UniformGrid Name ="Ugrid" Columns="2" VerticalAlignment="Bottom"/>
        </ScrollViewer>
        <Grid Height="201" Margin="0,0,10,0">
            <StackPanel Margin="80,10,65,50">
                <UniformGrid Columns="1">
                    <Border Height="50" Background="{StaticResource MenuItemColor}" CornerRadius="10" Margin="10" MouseLeftButtonDown="Transfer_Year">
                        <Label Foreground="{StaticResource TextColor}" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Започнување на новата учебна година"/>
                    </Border>

                </UniformGrid>
            </StackPanel>
        </Grid>
    </StackPanel>

</Page>
