<Window x:Class="AdminPanel.UsersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminPanel"
        mc:Ignorable="d"
        Title="UsersWindow">
    <Grid>
        <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
        <ScrollViewer Name="main_border" BorderThickness="1" BorderBrush="LightGray" VerticalAlignment="Center" Grid.Column="1" Padding="20 20">

            <DockPanel x:Name="User">
                <TextBox  Text="{Binding Path=UsernameBind,Mode=TwoWay}"/>
                <TextBox  Text="{Binding Path=PrezimeBind,Mode=TwoWay}"/>
                <TextBox  Text="{Binding Path=SrednoImeBind,Mode=TwoWay}"/>
                <!--<TextBox x:Name="User" Text="{Binding Path=UsernameBind,Mode=TwoWay}"/>-->
                <!--<TextBox x:Name="User" Text="{Binding Path=UsernameBind,Mode=TwoWay}"/>-->
            </DockPanel>
        </ScrollViewer>
        <Button HorizontalAlignment="Right" Content="{StaticResource UpdateUsersText}" Padding="10 2" Click="Update_Users"/>
    </Grid>
</Window>
